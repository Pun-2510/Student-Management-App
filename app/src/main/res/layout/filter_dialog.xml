<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_filter_dialog"
    android:clipToOutline="true"
    android:elevation="8dp"
    android:outlineProvider="background">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Heading -->
        <TextView
            android:text="Filter Students"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp" />

        <!-- SubHeading: Intake -->
        <TextView
            android:text="Intake"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp" />

        <CheckBox
            android:id="@+id/check_intake_2021_2025"
            android:text="2021 - 2025"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/check_intake_2023_2027"
            android:text="2023 - 2027"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/check_intake_2024_2028"
            android:text="2024 - 2028"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- SubHeading: Department -->
        <TextView
            android:text="Department"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="6dp" />

        <CheckBox
            android:id="@+id/check_department_it"
            android:text="Software Engineering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/check_department_business"
            android:text="Business Administration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/check_department_design"
            android:text="Graphic Design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- SubHeading: Gender -->
        <TextView
            android:text="Gender"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="6dp" />

        <CheckBox
            android:id="@+id/check_gender_male"
            android:text="Male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/check_gender_female"
            android:text="Female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- SubHeading: DOB -->
        <TextView
            android:text="Date of Birth"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="6dp" />

        <EditText
            android:id="@+id/edt_dob"
            android:hint="YYYY-MM-DD (optional)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <Button
                android:id="@+id/btn_reset_filter"
                android:text="Reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_apply_filter"
                android:text="Apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
